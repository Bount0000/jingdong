<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.jingdong.MainActivity">
    <FrameLayout
        android:layout_alignParentTop="true"
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout2" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
   <RadioGroup
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     >
       <LinearLayout
           android:id="@+id/lt_youye"
           android:orientation="vertical"
           android:layout_weight="1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
           <ImageView
               android:id="@+id/iv1"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@mipmap/shouye1"
               />
           <RadioButton
               android:id="@+id/btn_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"
               android:text="首页"
               />
       </LinearLayout>
       <LinearLayout
           android:id="@+id/lt_fenlei"
           android:orientation="vertical"
           android:layout_weight="1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
           <ImageView
               android:id="@+id/iv2"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@mipmap/fenlei1"
               />
           <RadioButton
               android:id="@+id/btn_2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"
               android:text="分类"
               />
       </LinearLayout>
       <LinearLayout
           android:id="@+id/lt_faxian"
           android:orientation="vertical"
           android:layout_weight="1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
           <ImageView
               android:id="@+id/iv3"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@mipmap/faxian1"
               />
           <RadioButton
               android:id="@+id/btn_3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"
               android:text="发现"
               />
       </LinearLayout>
       <LinearLayout
           android:id="@+id/lt_gouwuche"
           android:orientation="vertical"
           android:layout_weight="1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
           <ImageView
               android:id="@+id/iv4"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@mipmap/gouwuche1"
               />
           <RadioButton
               android:id="@+id/btn_4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"
               android:text="购物车"
               />
       </LinearLayout>
       <LinearLayout
           android:id="@+id/lt_wode"
           android:orientation="vertical"
           android:layout_weight="1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >

           <ImageView
               android:id="@+id/iv5"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@mipmap/wode1" />

           <RadioButton
               android:id="@+id/btn_5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"
               android:text="我的"
               />
       </LinearLayout>
   </RadioGroup>
    </LinearLayout>
</RelativeLayout>
